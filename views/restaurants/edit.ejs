<%- include('../partials/header') %>
<header class="jumbotron">
  <div class="container">
    <h2 class="header-display">Edit <%= restaurant.name %></h2>
    <form action="/restaurants/<%= restaurant._id %>/edit?_method=PUT" method="POST">
      <div class="form-group">
        <input type="text" class="form-control" name="name" value="<%= restaurant.name %>">
        <br>
        <input type="text" class="form-control" name="image" value="<%= restaurant.image %>">
        <br>
        <input type="text" class="form-control" name="description" value="<%= restaurant.description %>">
      </div>
      <button type="submit" class="btn btn-primary">Edit this restaurant</button>
    </form>
  </div>
</header>

<%- include('../partials/footer') %>
