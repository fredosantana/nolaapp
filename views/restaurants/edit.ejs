<%- include('../partials/header') %>
<header class="jumbotron">
  <div class="container">
    <h2 class="header-display">Edit <%= restaurant.name %></h2>
    <form action="/restaurants/<%= restaurant._id %>/?_method=PUT" method="POST">
      <div class="form-group">
        <input type="text" class="form-control" name="restaurant[name]" value="<%= restaurant.name %>">
        <br>
        <input type="text" class="form-control" name="restaurant[image]" value="<%= restaurant.image %>">
        <br>
        <input type="text" class="form-control" name="restaurant[description]" value="<%= restaurant.description %>">
      </div>
      <button type="submit" class="btn btn-success">Update</button>
      <form action="/restaurants/<%= restaurant._id %>?_method=DELETE" method="POST">
        <button id="dlte-btn" class="btn btn-danger">Delete</button>
      </form>
    </form>
  </div>
</header>

<%- include('../partials/footer') %>
