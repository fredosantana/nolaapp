<%- include('../partials/header') %>
  <header class="jumbotron">
    <div class="container">
      <h2 class="header-display"><%= restaurant.name %></h2>
      <% if(currentUser && restaurant.author.id.equals(currentUser._id)) { %>
        <a href="<%= restaurant._id %>/edit"><button class="btn btn-success">Edit/Destroy Here</button></a>
      <% } %>
    </div>
  </header>
  <img src="<%= restaurant.image %>">
  <p><%= restaurant.description %></p>
  <p><em>Submitted by: <%= restaurant.author.username %></em></p>
    <p><a class="btn btn-success" href="/restaurants/<%= restaurant.id %>/comments/new">Add a Comment</a></p>
  <% restaurant.comments.forEach((comment) => { %>
    <p>
      <%= comment.author.username %> - <%= comment.text %>
      <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
        <a class="btn btn-xs btn-warning" href="/restaurants/<%= restaurant._id %>/comments/<%= comment._id %>/edit">Edit Comment</a>
      <% } %>
    </p>
  <% }) %>
<%- include('../partials/footer') %>
